<Window x:Class="PDF_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Create PDF" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="7,26,0,0" Click="Button_Click"/>
        <ListView x:Name="Invoice_ListView" HorizontalAlignment="Left" Height="308" Margin="30,95,0,0" VerticalAlignment="Top" Width="535">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Navn" Width="100" DisplayMemberBinding="{Binding CustomerName}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
